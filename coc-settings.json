{
    "diagnostic.virtualText": true,
    "diagnostic.enableMessage": "never",
    "diagnostic.virtualTextFormat": "%source%code %message",
    "diagnostic.virtualTextCurrentLineOnly": false,
    "eslint.experimental.useFlatConfig": true,
    "eslint.format.enable": true,
    "html.autoClosingTags": false,
    "html.autoCreateQuotes": false,
    "inlayHint.enable": false,
    "javascript.format.enable": false,
    "javascript.validate.enable": true,
    "languageserver": {
        "bash": {
            "args": [
                "start"
            ],
            "command": "bash-language-server",
            "filetypes": [
                "bash",
                "sh"
            ],
            "ignoredRootPaths": []
        }
    },
    "pyright.disableDiagnostics": true,
    "python.linting.banditEnabled": true,
    "python.linting.flake8Enabled": true,
    "python.linting.mypyEnabled": true,
    "python.linting.prospectorEnabled": true,
    "python.linting.pycodestyleEnabled": true,
    "python.linting.pydocstyleEnabled": true,
    "python.linting.pyflakesEnabled": true,
    "python.linting.pylamaEnabled": true,
    "python.linting.pylintArgs": [
        "--disable=C0103",
        "--disable=C0112",
        "--disable=C0114",
        "--disable=C0115",
        "--disable=C0116",
        "--disable=C0301",
        "--disable=R0902",
        "--disable=R0903",
        "--disable=R0904",
        "--disable=W0621"
    ],
    "python.linting.pylintCategorySeverity.convention": "Hint",
    "python.linting.pylintEnabled": true,
    "python.linting.pytypeEnabled": true,
    "python.linting.ruffEnabled": true,
    "typescript.format.enable": false,
    "typescript.validate.enable": true
}
